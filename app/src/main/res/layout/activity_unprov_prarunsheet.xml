<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_20"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <include layout="@layout/action_bar_home" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:id="@+id/table"
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="vertical">



            <LinearLayout
                android:id="@+id/praRunsheet"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/courier"
                    android:layout_width="69dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:background="@color/black_10">

                    <include
                        layout="@layout/bar"></include>
                </LinearLayout>

                <EditText
                    android:id="@+id/searchInput"
                    android:layout_width="259dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/go"
                    android:layout_width="51dp"
                    android:layout_height="match_parent"
                    android:background="@color/black_10"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Go"
                    android:textSize="16dp"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="392dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical" >

            <EditText
                android:layout_width="139dp"
                android:layout_height="match_parent"
                android:background="@color/blue_grey_50"
                android:drawableEnd="@drawable/ic_unfold_more_black_24dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="3. UN APPROVED"
                android:textAllCaps="false"
                android:textSize="13dp">

            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableEnd="@drawable/ic_expand_more_black_24dp"
                android:gravity="right|center_vertical|center_horizontal"
                android:text="Action">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="394dp"
            android:layout_height="154dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="394dp"
            android:layout_height="225dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp">

            <include layout="@layout/table_pra_notapproved"></include>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
