<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_20"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <include layout="@layout/action_bar_home"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:id="@+id/table"
            android:layout_width="394dp"
            android:layout_height="378dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="390dp"
                android:layout_height="60dp">

                <Button
                    android:id="@+id/new_number"
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:text="New Number"
                    android:textAllCaps="false"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right">

                    <Button

                        android:id="@+id/approve"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/light_blue_900"
                        android:text="Approve"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="320dp"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblPra"
                    android:layout_width="352dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="15dp"
                    android:text="Pra Runsheet #"
                    android:textColor="@color/black"
                    android:textSize="16dp">

                </TextView>

                <EditText
                    android:id="@+id/pra_runsheet"
                    android:layout_width="352dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/grey_20"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/lblAprrove"
                    android:layout_width="352dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="Approved : "
                    android:textColor="@color/black"
                    android:textSize="16dp">

                </TextView>

                <TextView
                    android:id="@+id/aprroveOrNo"
                    android:layout_width="352dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="15dp"
                    android:text="NO "
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/lblDate"
                    android:layout_width="352dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="Date"
                    android:textColor="@color/black"
                    android:textSize="16dp">

                </TextView>

                <EditText
                    android:id="@+id/date"
                    android:layout_width="352dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/grey_20"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/lblZona"
                    android:layout_width="352dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="15dp"
                    android:text="Courier Zone : "
                    android:textColor="@color/black"
                    android:textSize="14dp">

                </TextView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/zoneCdName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"
                    android:text="CGK032"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold">

                </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/nameZona"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:text="JAKARTA"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold">

    </TextView>


</LinearLayout>
                <TextView
                    android:id="@+id/lblCourierId"
                    android:layout_width="352dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="Courier ID"
                    android:textColor="@color/black"
                    android:textSize="16dp">

                </TextView>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <LinearLayout
                    android:id="@+id/courier"
                    android:layout_width="352dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/grey_20"
                        android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp">
                    <include layout="@layout/spinner_courierid"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/lblRemarks"
                    android:layout_width="352dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="Remarks"
                    android:textColor="@color/black"
                    android:textSize="16dp">

                </TextView>

                <EditText
                    android:id="@+id/remarks"
                    android:layout_width="352dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/grey_20"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="16dp" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="394dp"
            android:layout_height="89dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblConnote"
                    android:layout_width="352dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:text="Connote #"
                    android:textColor="@color/black"
                    android:textSize="16dp">

                </TextView>

                <FrameLayout
                    android:id="@+id/cameraPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <Button
                            android:id="@+id/btnScanBarcode"
                            android:layout_width="44dp"
                            android:layout_height="42dp"
                            android:layout_below="@+id/btnTakePicture"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/ic_camera_alt_black_24dp"
                            android:onClick="scanNow"
                            android:textAllCaps="false" />

                        <EditText
                            android:id="@+id/scanConnote"
                            android:layout_width="255dp"
                            android:layout_height="30dp"
                            android:layout_below="@id/btnScanBarcode"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="2dp"
                            android:background="@color/grey_20"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                        <ImageView
                            android:id="@+id/save"
                            android:layout_width="36dp"
                            android:layout_height="31dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/ic_save_black_24dp">

                        </ImageView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="394dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <Button

                    android:id="@+id/btnViewDetail"
                    android:layout_width="114dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/light_blue_900"
                    android:text="View Connote"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
